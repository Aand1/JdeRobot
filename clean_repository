#!/bin/sh

set -e

test -d src/stable && test -d src/testing

# remove cmake_install.cmake files
find -type f -name cmake_install.cmake -exec rm {} +

# remove Makefile files
find src -type f -name Makefile -exec rm {} +
test -d CMakeFiles \
    && find CMakeFiles -type f -name Makefile -exec rm {} + \
    || true
rm -f Makefile

mivar=`du -a | grep CMakeFiles | awk '{print $2}'`


for file in $mivar; do
	rm -fr $file
done

mivar=`du -a | grep CMakeCache.txt | awk '{print $2}'`


for file in $mivar; do
	rm -fr $file
done

rm -f src/stable/interfaces/cpp/jderobot/*
rm -rf src/stable/interfaces/python/jderobot/*

mivar=`du -a | grep "cmake_uninstall.cmake$" | awk '{print $2}'`

for file in $mivar; do
	rm -fr $file
done

rm -f src/stable/libs/*/*.so
rm -f src/stable/libs/*/*.a
